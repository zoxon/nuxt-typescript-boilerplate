{
  "name": "nuxt-boilerplate",
  "version": "1.0.0",
  "description": "Useful nuxt.js boilerplate",
  "author": "Velichko Konstantin",
  "private": true,
  "scripts": {
    "dev": "nuxt-ts",
    "build": "nuxt-ts build",
    "start": "nuxt-ts start",
    "generate": "nuxt-ts generate",
    "lint:eslint": "eslint --fix",
    "lint:stylelint": "stylelint --fix",
    "lint:prettier": "prettier --write --loglevel warn",
    "lint:all:eslint": "npm run lint:eslint -- --ext .js,.vue .",
    "lint:all:stylelint": "npm run lint:stylelint \"**/*.{vue,scss}\"",
    "lint:all:prettier": "npm run lint:prettier \"**/*.{js,json,css,scss,vue,html,md}\"",
    "lint": "run-s lint:all:*",
    "test:unit": "jest",
    "test:unit:file": "npm run test:unit -- --bail --findRelatedTests",
    "test:unit:watch": "npm run test:unit -- --watch --notify --notifyMode change",
    "test:unit:ci": "npm run test:unit -- --coverage --ci",
    "test": "npm run test:unit",
    "test:ci": "npm run test:unit:ci",
    "new": "hygen new"
  },
  "husky": {
    "hooks": {
      "pre-commit": "cross-env PRE_COMMIT=true lint-staged",
      "pre-push": "npm test"
    }
  },
  "dependencies": {
    "@nuxt/typescript-runtime": "^0.1.3",
    "@nuxtjs/pwa": "^3.0.0-0",
    "cross-env": "^6.0.3",
    "lodash": "^4.17.15",
    "nuxt": "^2.0.0"
  },
  "devDependencies": {
    "@nuxt/typescript-build": "^0.1.11",
    "@nuxtjs/eslint-config": "^1.0.1",
    "@nuxtjs/eslint-config-typescript": "^0.1.2",
    "@nuxtjs/eslint-module": "^1.0.0",
    "@vue/test-utils": "^1.0.0-beta.27",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-nuxt": ">=0.4.2",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^3.0.8",
    "hygen": "^4.0.9",
    "imagemin-lint-staged": "^0.4.0",
    "jest": "^24.1.0",
    "jest-serializer-vue": "^2.0.2",
    "lint-staged": "^9.4.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "stylelint": "^11.0.0",
    "stylelint-config-prettier": "^6.0.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-order": "^3.1.1",
    "stylelint-scss": "^3.11.1",
    "stylelint-selector-bem-pattern": "^2.1.0",
    "ts-jest": "^24.0.2",
    "vue-jest": "^4.0.0-0"
  }
}
